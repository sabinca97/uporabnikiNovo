<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="image-catalog-jpa" transaction-type="JTA">
        <!--<non-jta-data-source>jdbc/ImageMetadataDS</non-jta-data-source>-->
        <jta-data-source>jdbc/axmsufdwudxpwn</jta-data-source>

        <class>si.fri.rso.samples.imagecatalog.models.entities.ImageMetadataEntity</class>
        <class>si.fri.rso.samples.imagecatalog.models.entities.UporabnikMetadataEntity</class>
        <class>si.fri.rso.samples.imagecatalog.models.converters.InstantAtributeConverter</class>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.sql-load-script-source" value="sql-scripts/init.sql" />
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
        </properties>
    </persistence-unit>
</persistence>
